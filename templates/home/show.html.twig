{% extends 'base.html.twig' %}
{% block stylesheets %}
<style type="text/css">
	.jaimes {
    position: absolute;
    bottom: -60px;
    right: 0;
    padding: 20px;
    color: black;
    font-size: 11px;
}

	.card-image .material-icons.border{
		color: rgba(0,0,0,0.87);
	}
</style>
{% endblock %}
{% block body %}
<div class="container">
		<div class="grid gallery row">
  			{% for picture in pictures %}
  				<div class="grid-item col m4">
  					<div class="row">
    					<div class="col s12 m12">
      						<div class="card">
        						<div class="card-image">
          							<img src="images/{{ picture.name }}">
          							
          							<a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons ">favorite</i></a>
                        <span class="jaimes">{{ picture.likes }} j'aimes</span>
        						</div>
        						<div class="card-content">
	          						<span class="card-title">{{ picture.title }}</span>
        						</div>
      						</div>
    					</div>
  					</div>	
  				</div>
  			{% endfor %}
		</div>
</div>

{% endblock %}
{% block javascripts %}

{% endblock %}