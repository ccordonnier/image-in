{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block body %}


<div class="container">
	<h1>Mes images</h1>
		<div class="grid gallery row">
  			{% for picture in pictures %}
  				<div class="grid-item col m4">
  					<div class="row">
    					<div class="col s12 m12">
                            <div class="card">
                                <div class="card-image">
                                    <img class="" src="{{asset('images/users/'~ app.user.id ~ '/' ~ picture.name )}}">
									<a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons ">favorite</i></a>
                        			<span class="jaimes">{{ picture.likes }}</span>
                                </div>
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">{{ picture.title }}</span>
                                    <p>
										<a href="#"><i class="material-icons">visibility</i></a>
										<a href="#"><i class="material-icons">file_download</i></a>
										<a href="{{ path('profil_pictures_edit', {'id' : picture.id} ) }}"><i class="material-icons">edit</i></a>
										<a href="#"><i class="material-icons">delete</i></a>
									</p>
                                </div>
                            </div>
    					</div>
  					</div>	
  				</div>
  			{% endfor %}
		</div>
</div>

{% endblock %}

{% block javascripts %}

{% endblock %}