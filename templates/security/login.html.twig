<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Image-in - Inscrivez-vous et laissez parler votre imaginaire !{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style type="text/css">
  .card-login .card-tabs {
    background-image: url(images/backgroundlogin.jpg);
    background-size: cover;
  }

  .card-login h2 {
    color: white;
    text-align: center;
    width: 100%;
    height:100vh;
    
    margin-top:45vh;
  }
</style>
</head>
    <body>
    <div class="row">
      <div class="col s12">
        {% if not messageError is empty %}
        <div class="row">
          <div class="card-panel red darken-2">
            <span class="white-text text-darken-2">
              <strong>
                {{ messageError }}
              </strong>
            </span>
          </div>
        </div>
        {% endif %}
        <div class="row card-login horizontal">

          <div class="card-tabs col s5 valign-wrapper">
            <h2 class="center-align">Welcome to Image-in</h2>
          </div>
          <div class="col s7">
            <div class="login-tabs">          
              <div class="card-content">
                <ul class="tabs row" id="tabs-login">
                  <li class="tab col s6"><a href="#connexion">Connexion</a></li>
                  <li class="tab col s6"><a href="#inscription">Inscription</a></li>
                </ul>
              </div>
              <div id="connexion" class="col s12">
                <div class="row">
                  <form class="col s12" action="{{ path('security_login') }}" method="post">
                    <div class="row">
                      {% if error %}
                      <div class="card-panel red lighten-3">{{ error.messageKey }}</div>
                      {% endif %}
                      <div class="input-field col s12">
                        <input id="log-email" type="email" name="log-email" class="validate" value={{ lastUsername }}>
                        <label for="log-email">Email</label>
                      </div>
                      <div class="input-field col s12">
                        <input id="log-password" type="password" name="log-password" class="validate">
                        <label for="log-password">Mot de passe</label>
                      </div>
                      <div class="input-field col s12">
                        <input id="log-submit" name="log-submit" type="submit" class="btn waves-effect waves-light"
                          value="se connecter">
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <div id="inscription" class="col s12">
                <div class="row">
                  {{ form_start(formSign, {'method': 'POST', 'class':'col s12', 'action': path('signin')}) }}
                  <div class="row">
                    <div class="input-field col s12">
                      <!--<input id="sign-email" type="email" name="_sign-email" class="validate">
                        <label for="sign-email">Email</label>-->
                      {{ form_row(formSign.email) }}
                    </div>
                    <div class="input-field col s12">
                      <!--<input id="sign-username" type="text" name="_sign-username" class="validate">
                        <label for="sign-username">Nom d'utilisateur</label>-->
                      {{ form_row(formSign.username) }}
                    </div>
                    <div class="input-field col s12">
                      <!--<input id="sign-password" type="password" name="_sign-password" class="validate">
                        <label for="sign-password">Mot de passe</label>-->
                      {{ form_row(formSign.password.first) }}
                    </div>
                    <div class="input-field col s12">
                      <!--<input id="sign-confirm-password" type="password" name="_sign-confirm-password" class="validate">
                        <label for="sign-confirm-password">Confirmer le mot de passe</label>-->
                      {{ form_row(formSign.password.second) }}
                    </div>
                    <div class="input-field col s12">
                      <input id="sign-submit" name="_sign-submit" type="submit" class="btn"
                        value="s'inscrire">
                    </div>
                  </div>
                  {{form_rest(formSign)}}

                  {{ form_end(formSign) }}
                </div>
              </div>
            </div>            
          </div>
        </div>
      </div>
    </div>



<script  src="https://code.jquery.com/jquery-3.5.1.min.js"  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="  crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
      
<script type="text/javascript">

  if ($('#tabs-login').length) {
    $('#tabs-login').tabs({});
  }
</script>
</body>
</html>